@using Microsoft.AspNetCore.Identity
@using FlowerWorld.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <p>欢迎您，@UserManager.GetUserName(User)!</p>
    <form id="logoutForm" asp-controller="Account" asp-action="LogOff" method="post">
        <a href="javascript:document.getElementById('logoutForm').submit()">注销</a>
    </form>
}
else
{
    <p>欢迎光临。送花请<a asp-area="" asp-controller="Account" asp-action="Login">登录</a>。</p>
    <p>免费<a asp-area="" asp-controller="Account" asp-action="Register">注册</a>，享受会员优惠！</p>
}
